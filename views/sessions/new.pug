extends ../layouts/application.pug

block content
  .row.justify-content-center
    .card.mx-3.col.col-md-6.shadow-sm
      .card-body
        +formFor(f, { url: urlFor('session'), method: 'post' })
          +input(f, 'email')
          +input(f, 'password', { as: 'password' })
          +button(f, { value: 'Sign In', classList: 'btn-info' })
