extends ../layouts/application.pug

block content
  table.table.table-stripped
    tbody
      tr
        td First name
        td= user.firstName
      tr
        td Last name
        td= user.lastName
      tr
        td email
        td= user.email

  if (user.id === userId)
    .d-flex
      a.btn.btn-info.mr-2(href=urlFor('editUser', user.id) data-toggle='tooltip' data-placement='bottom' title='Edit')
        span.d-none.d-md-inline Edit &nbsp
        i.fas.fa-pen
      a.btn.btn-secondary.mr-2(href=urlFor('editUserPassword', user.id) data-toggle='tooltip' data-placement='bottom' title='Change password')
        span.d-none.d-md-inline Change password  &nbsp
        i.fas.fa-key
      a.btn.btn-danger(href=urlFor('deleteUser', user.id) data-method='delete' data-toggle='tooltip' data-placement='bottom' title='Delete user')
        span.d-none.d-md-inline Remove user  &nbsp
        i.fas.fa-trash-alt