extends ../layouts/application.pug

block content
  .row.justify-content-center
    .card.col.mx-3.col-md-9.shadow-sm
      .card-body
        +formFor(f, { url: urlFor('patchTask', f.object.id), method: 'PATCH' })
          +input(f, 'name')
          +textarea(f, 'description')
          +select(f, 'taskStatusId', { list: statusList })
          +select(f, 'assignedToId', { list: userList })
          +textarea(f, 'tags', { rows: 2, inputText: 'Separate tags with a comma (,)'})
          .form-group
            a.btn.btn-info.mr-2(href=urlFor('tasks') data-tooltip='true' data-placement='bottom' title='Back') 
              i.fas.fa-undo-alt
              span.d-none.d-md-inline &nbsp Back 
            button.btn.btn-success(type='submit' data-tooltip='true' data-placement='bottom' title='Apply changes')
              span.d-none.d-md-inline Apply &nbsp
              i.fas.fa-arrow-right